<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="88dp"
        android:layout_height="98dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="false"
        android:layout_toRightOf="@id/img_avatar"
        android:text="txt_name_send"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txt_time_recive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_sender"
        android:layout_toLeftOf="@+id/checkbox_favorite"
        android:layout_toRightOf="@+id/img_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="txt_title"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/checkbox_favorite"
        android:layout_toRightOf="@id/img_avatar"
        android:text="txt_title"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/checkbox_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time_recive"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@android:drawable/btn_star"
        app:srcCompat="@android:drawable/btn_star" />

</RelativeLayout>